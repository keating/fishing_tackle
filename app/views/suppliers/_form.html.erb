<%= form_for(@supplier) do |f| %>
    <% if @supplier.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-error">
            <%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from
            being saved:
          </div>

          <ul>
            <% @supplier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name_cn, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name_cn, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :tel, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :tel, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :fax, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :fax, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :style => "width:400px;" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :detail, :class => 'control-label' %>
      <div class="controls" style="width:600px;">
        <%= f.cktext_area :detail, :style => "height:180px;", :toolbar => "Basic", :cols => "20" %>
      </div>
    </div>
    <div class="actions" style="margin-top: 10px;">
      <label class="control-label"></label>
      <div class="controls">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
<% end %>
